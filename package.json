{
  "name": "probot-workflow",
  "version": "1.0.0",
  "description": "workflow automation",
  "license": "ISC",
  "author": "Brandon Keepers",
  "repository": "https://github.com/probot/workflow",
  "scripts": {
    "build": "babel node_modules/probot --presets es2015 --out-dir probot && babel --presets es2015 index.js > index.build.js",
    "deploy": "npm run build && zip -9 -x lambda-function.zip -r lambda-function * && aws lambda update-function-code --function-name hm-linter --region us-east-1 --zip-file fileb://lambda-function.zip",
    "test": "docker run -e \"APP_ID=5455\" -e \"WEBHOOK_SECRET=development\" -v \"$PWD\":/var/task lambci/lambda:nodejs6.10 index.probotHandler \"$AWS_LAMBDA_EVENT_BODY\"",
    "start": "probot run ./index.js"
  },
  "dependencies": {
    "babel-core": "6.17.0",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-polyfill": "6.16.0",
    "handlebars": "^4.0.6",
    "probot": "^3.0.2"
  },
  "engines": {
    "node": ">= 7.7.0",
    "npm": ">= 4.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "6.17.0",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-polyfill": "6.16.0",
    "babel-preset-es2015": "6.16.0",
    "babel-preset-stage-0": "6.16.0",
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "jest": "^21.2.1",
    "localtunnel": "^1.8.3",
    "standard": "^10.0.3"
  },
  "jest": {
    "testMatch": [
      "**/test/**/*.js?(x)",
      "**/?(*.)(spec|test).js?(x)"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/test/fixtures/",
      "<rootDir>/test/setup.js"
    ]
  },
  "standard": {
    "env": [
      "jest"
    ],
    "globals": [
      "on",
      "include",
      "contents"
    ],
    "plugins": [
      "markdown"
    ]
  }
}
